{
  "compilerOptions": {
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "@xodarap/core/*": ["../../packages/core/src/*"],
      "@xodarap/prisma/*": ["../../packages/prisma/src/*"]
    }
  },
  "exclude": ["node_modules"]
}
